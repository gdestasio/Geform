

<div class="row">
    <%= link_to admins_events_path do %>
        <div class="col-lg-3" style="color:#666">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <span class="label label-primary pull-right"><i class="fa fa-list"></i></span>
                    <h5>Eventi</h5>
                </div>
                <div class="ibox-content">
                    <h1 class="no-margins"><%= @events.size %></h1>
                    <small>eventi creati</small>
                </div>
            </div>
        </div>
    <% end %>
    <%= link_to admins_users_path do %>
        <div class="col-lg-3" style="color:#666">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <span class="label label-info pull-right"><i class="fa fa-users"></i></span>
                    <h5>Utenti</h5>
                </div>
                <div class="ibox-content">
                    <h1 class="no-margins"><%= @users.size %></h1>
                    <small>utenti iscritti</small>
                </div>
            </div>
        </div>
    <% end %>
