<div class="row">
    <div class="col-md-6">
        <div class="widget white-bg p-xl">
            <h2>
                <%= current_admin.name%>
            </h2>
            <ul class="list-unstyled m-t-md">
                <li>
                    <span class="fa fa-envelope m-r-xs"></span>
                    <label>Email:</label>
                    <%= current_admin.email%>
                </li>
                <li>
                    <span class="fa fa-history m-r-xs"></span>
                    <label>Ultimo accesso:</label>
                    <%= current_admin.last_sign_in_at%>
                </li>
                <li>
                    <span class="fa fa-sign-in m-r-xs"></span>
                    <label>Accessi:</label>
                    <%= current_admin.sign_in_count%>
                </li>
            </ul>

        </div>
    </div>
</div>


