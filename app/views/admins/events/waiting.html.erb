<div class="list-header">
	<div class="row">
		<div class="col-md-6">
			<h4 class="oda-color">Lista Utenti In Lista (<%= @users.total_entries %>)</h4>
		</div>
		<div class="col-md-6">
		  <%= link_to admins_events_show_path(@event), class: 'btn btn-secondary pull-right' do %>Indietro <% end %>
		</div>
	</div>
</div>

<% if not @users.empty? %>
	<div class="table-responsive">
		<table class="table table-bordered table-responsive" id="sortable">
	    <thead>
	      <tr>
	        <th class="header">Nome</th>
	        <th class="header">Email</th>
	        <th class="header">Codice Fiscale</th>
	        <th class="header">Registrato Il</th>
	        <th></th>
	      </tr>
	    </thead>
	    <tbody>
	     	<% @users.each do |user|%>
	        <tr>
	          <td><%= user.name%></td>
	          <td><%= user.email %></td>
	          <td><%= user.taxcode %></td>
	          <td><%= user.created_at.strftime("%d/%m/%Y %H:%M") %></td>
	          <td class="text-center" style="width:100px"><%= link_to admins_users_show_path(id: user.id), class: 'btn btn-secondary' do %><i class="fa fa-list"></i> <% end %></td>
	        </tr>
	      <% end %>
	    </tbody>
	  </table>
	</div>
	<div class="digg_pagination"><%= will_paginate @users %></div>
<% else%>
	<p>Nessun utente in Lista di Attesa </p>
<% end %>